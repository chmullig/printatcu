.container
  .content
    %header.page-header
      %h1 Print@CU

    - if flash[:printer] && flash[:user]
      .alert-message.block-message.success{data: {"alert" => "alert"}}
        %a.close{href: "#"} &times;
        %p= t("success.html", :count => flash[:count], :printer => flash[:printer], :user => flash[:user])
    - elsif @print.errors.any?
      .alert-message.block-message.error{data: {"alert" => "alert"}}
        %a.close{href: "#"} &times;
        %p
          %strong= t(:something_bad_happened)
        %ul
          - @print.errors.full_messages.each do |msg|
            %li= msg

    = form_for @print do |f|
      #main.row
        .span4.choice-span
          .clearfix
            = f.label(:building)
            = f.select(:building, buildings)
          .clearfix
            = f.label(:printer)
            = f.select(:printer, default_printer, {})
        .span2.divider &raquo;
        .span4.file-span
          = f.file_field(:documents, :multiple => true)
        .span2.divider &raquo;
        .span4.print-span
          = f.submit(:class => "btn large primary")
          %ul.inputs-list
            %li
              = f.label(:collate) do
                = f.check_box :collate
                %span= t("helpers.label.print.collate")
            %li
              = f.label(:double_sided) do
                = f.check_box :double_sided
                %span= t("helpers.label.print.double_sided")
            %li
              = f.label(:copies) do
                %span= t("helpers.label.print.copies")
                = f.text_field :copies, :class => "span1", :placeholder => 1, :size => 2, :maxlength => 2

  %footer
    %p#disclaimer= t(:disclaimer)
    %p
      &copy;
      = mail_to "sia2111@columbia.edu", "Sam Aarons", :encode => "hex"
      = Time.zone.now.strftime("%Y")
    %p
      #credits
        %a{:href => "http://github.com/saarons"} saarons
        &amp;&amp;
        %a{:href => "http://www.zx2c4.com"} zx2c4